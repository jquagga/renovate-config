{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":automergeMinor",
    ":automergeDigest",
    ":enableVulnerabilityAlerts",
    ":dependencyDashboard",
    ":semanticCommits",
    "group:allNonMajor",
    "group:allDigest",
    "docker:enableMajor",
    ":rebaseStalePrs",
    ":assignee(jquagga)",
    "customManagers:dockerfileVersions",
    "customManagers:githubActionsVersions",
    ":timezone(America/New_York)",
    ":prHourlyLimitNone",
    ":prConcurrentLimit20",
    "npm",
    "schedule:weekly",
    "security:openssf-scorecard",
    ":maintainLockFilesWeekly",
    ":docker",
    "security:minimumReleaseAgeNpm",
    "mergeConfidence:all-badges",
    "preview:dockerCompose",
    "preview:dockerVersions",
    "pruneStaleBranches:true"
  ],
  "labels": ["dependencies"],
  "rebaseWhen": "conflicted",
  "suppressNotifications": ["prIgnoreNotification"],
  "osvVulnerabilityAlerts": true,
  "dependencyDashboardOSVVulnerabilitySummary": "all",
  "vulnerabilityAlerts": {
    "labels": ["security", "dependencies"],
    "schedule": ["at any time"]
  },
  "packageRules": [
    { "matchUpdateTypes": ["major"], "labels": ["major"] },
    { "matchDatasources": ["docker"], "labels": ["docker"] },
    { "matchUpdateTypes": ["minor", "patch"], "minimumReleaseAge": "3 days" },
    {
      "description": "Require approval for major dev dependencies",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["major"],
      "dependencyDashboardApproval": true
    },
    {
      "description": "Automerge stable non-major updates",
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "internalChecksFilter": "strict"
    }
  ]
}
